{
  "name": "@t--takai/renovate-config",
  "version": "0.1.0",
  "description": "t--takai presets for Renovate",
  "repository": "https://github.com/t--takai/renovate-config",
  "author": "Tomonari Takai",
  "license": "MIT",
  "scripts": {
    "test": "renovate-config-validator"
  },
  "renovate-config": {
    "default": {
      "description": "Default config for t--takai repository",
      "extends": [
        "config:base",
        "schedule:earlyMondays",
        ":label(renovate)",
        ":automergePatch",
        ":automergeMinor",
        ":automergePr",
        ":assignee(t--takai)",
        ":timezone(Asia/Tokyo)"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "extends": [
          "schedule:monthly",
          ":assignee(t--takai)",
          ":automergePr"
        ]
      },
      "major": {
        "automerge": false
      }
    }
  },
  "devDependencies": {
    "renovate": "19.202.3"
  }
}
